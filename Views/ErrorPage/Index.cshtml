
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ErrorPageLayout.cshtml";
}


<div class="error-box">
    <h1>@ViewData["ErrorCode"]</h1>
    <h3 class="h2 mb-3"><i class="fas fa-exclamation-circle"></i> Oops! @ViewData["ErrorPage"]!</h3>
    <p class="h4 font-weight-normal">@ViewData["ErrorContent"].</p>
    <a href="index.html" class="btn btn-primary" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
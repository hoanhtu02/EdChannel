@model EdChannel.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Add Category</h4>
            <h6>Create new Category</h6>
        </div>
        <div class="page-btn">
            <a asp-action="Index" class="btn btn-added">
                <img src="~/img/icons/return1.svg" class="me-2" alt="img">Back to list
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ParentId" class="control-label"></label>
                            <select asp-for="ParentId" class="form-control form-small select select2-hidden-accessible" tabindex="-1" aria-hidden="true" data-select2-id="23" asp-items="ViewBag.ParentId">
                                <option value="">Choose parent category</option>
                            </select>
                            <span asp-validation-for="ParentId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MetaTitle" class="control-label"></label>
                            <input asp-for="MetaTitle" class="form-control" />
                            <span asp-validation-for="MetaTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Slug" class="control-label"></label>
                            <input asp-for="Slug" class="form-control" />
                            <span asp-validation-for="Slug" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Details" class="control-label"></label>
                            <textarea rows="3" asp-for="Details" class="form-control"></textarea>
                            <span asp-validation-for="Details" class="text-danger"></span>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label asp-for="Image" class="control-label"></label>
                                <input type="file" class="form-control" asp-for="ImageFile" accept="image/*">
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

